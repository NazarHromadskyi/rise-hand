<div class="rise-hand-queue-container">
  <div class="queue-header">
    <h2>ðŸ”Š Hand Raise Queue</h2>
    {{#if isGM}}
      {{#if hasQueue}}
        <button id="clear-all" class="clear-all-btn">{{clearAll}}</button>
      {{/if}}
    {{else}}
      {{#if isCurrentUserInQueue}}
        <button id="leave-queue" class="leave-queue-btn">{{leaveQueue}}</button>
      {{/if}}
    {{/if}}
  </div>
  
  <div class="queue-content">
    {{#if hasQueue}}
      <div class="queue-list">
        {{#each queue}}
          <div class="queue-item {{#if isUrgent}}urgent{{/if}}">
            <div class="queue-item-header">
              <span class="position-badge">{{position}}</span>
              <span class="priority-icon">{{priorityIcon}}</span>
              <strong class="user-name">{{userName}}</strong>
              <span class="priority-tag {{#if isUrgent}}urgent{{/if}}">{{priorityText}}</span>
            </div>
            <div class="queue-item-details">
              <span class="timestamp">{{timeString}}</span>
            </div>
            {{#if ../isGM}}
              <div class="queue-item-actions">
                <button class="give-word" data-user-id="{{userId}}">{{../giveWord}}</button>
                <button class="remove-user" data-user-id="{{userId}}">{{../remove}}</button>
              </div>
            {{/if}}
          </div>
        {{/each}}
      </div>
    {{else}}
      <div class="empty-queue">
        <p>{{emptyMessage}}</p>
      </div>
    {{/if}}
  </div>
</div> 